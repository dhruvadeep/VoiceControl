set shell := ["bash", "-cu"]
set dotenv-load

# Set the default recipe
default: build

# A recipe to build the project
build_all:
    echo "Building the requirements..."
    cd browser_control && uv sync && uv run playwright install firefox
    cd HardwareApplication& && uv sync
    cd Application && uv sync && uv run aggregator.py
# A recipe to clean the project
clean:
    echo "Cleaning the project..."

# A recipe to run the project
run_all:
    echo "starting the project..."
    cd browser_control && uv sync && uv run uvicorn browser:APP --loop asyncio --host 0.0.0.0 --port 8001
    cd HardwareApplication && uv sync && uv run hardware.py
    cd Application && uv sync && uv run aggregator.py
# A recipe to test the project
test:
    echo "Testing the project..."